{
	"compilerOptions": {
		"target": "es2019",
		"module": "commonjs",
		"lib": [
			"es2019",
			"es2020"
		],
		"declaration": true,
		"declarationDir": "dist",
		"sourceMap": true,
		"outDir": "dist",
		"removeComments": false,
		"strict": true,
		"moduleResolution": "node",
		"allowJs": true,
		"esModuleInterop": true,
		"resolveJsonModule": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}